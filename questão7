peso = float(input("Digite o peso de peixes trazido por pricila (em kg): "))
limite = 50
multa_por_kg = 4.00

if peso > limite:
    excesso = peso - limite
    multa = excesso * multa_por_kg
else:
    excesso = 0
    multa = 0

print(f"Excesso: {excesso:.2f} kg")
print(f"Multa: R$ {multa:.2f}")
